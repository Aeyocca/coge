    }

    $.ajax({
        data: {
            fname: 'update_owner',
            nid: "<TMPL_VAR NAME='NOTEBOOK_ID'>",
            user_name: user_name,
            timestamp: new Date().getTime()
        },
        success : function(data) {
            if (data) {
                alert(data);
            }
        }
    });
}
