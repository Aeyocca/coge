  //alert(num);
  //alert("show_info(['args__'+num],[display_info]),800");
  num = "\""+num+"\"";
  if (stop == 1){
   clearTimeout(pageObj.time);}
  else{
   pageObj.time = setTimeout("show_summary("+num+")",600);
    }
  //$('#'+id).mouseout(clearTimeout(time));
}


function show_summary(id) {
  $('#summary').hide();
  var popup_size = $('#main').width() * (3/4);
  var left_padding = ($(window).width() - popup_size) / 2;
  var html = "<a href='#' onClick=\"$('#summary').slideToggle(pageObj.speed);\" style='float: right;'><img src='/CoGe/picts/delete.png' width='16' height='16' border='0'></a>";
  html = html + '<br>' + $('#page_info'+id).html();
  $('#summary').html(html).css("left",''+left_padding).css("top","350").width(popup_size).slideDown(pageObj.speed);
}

function onEnter(e){
  if (!e){ 
   var e = window.event;}
  if(e.which == 13){
login(['uname', 'pwd','url'],[place_cookie]);
 }
}



