<SCRIPT language="JavaScript">

function place_cookie(valid, cookie, url)
  {
    if (valid == 'true') 
     {
       document.cookie = cookie;
       if ($('#disable_animations')[0].checked) $.cookie('anim_speed',0);
       if (url)
        {
         if ((url.match(/index/)) && ($('#disable_animations')[0].checked)) url += "?disable=1";
         window.location = url;
        }
       else {
        if ($('#disable_animations')[0].checked){
          window.location = "index.pl?disable=1";}
        else{
          window.location.reload;}
        }
     }
    else
     {
	$('#message').html('<font class="error">Invalid login</font>');       
     }
  }

function delete_cookie(cookie)
  {
    document.cookie=cookie;
  }

$(document).ready(function(){
//$('#main').hide();
//$('.page_info').hide();
$('#main').show(pageObj.speed);
});

$(document).ready(
	function() {
$('#carousel').Carousel(
		{
			itemWidth: 227,
			itemHeight: 75,
			itemMinWidth: 40,
			items: 'a',
			reflections: 0,
			rotationSpeed: 0.7,
			slowOnHover: true,
//			reflections: 1,

		}
	);	
}
);
function timing(num,stop){
  //alert(num);
  //alert("show_info(['args__'+num],[display_info]),800");
  num = "\""+num+"\"";
  if (stop == 1){
   clearTimeout(pageObj.time);}
  else{
   pageObj.time = setTimeout("show_data("+num+")",600);
    }
  //$('#'+id).mouseout(clearTimeout(time));
}

function show_data(num){
  $('.page_info').hide();
  $('#page_info'+num).slideDown(pageObj.speed);
}

</SCRIPT>


