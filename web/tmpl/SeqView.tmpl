function generate_seq_obj(dsid,chr){

  this.start=$('#upstream').val()*1;
  this.stop=$('#downstream').val()*1;
  this.orig_start=$('#upstream').val()*1;
  this.orig_stop=$('#downstream').val()*1;
  this.dsid=dsid;
  this.chr=chr;
  this.pro=0;
}

function generate_seq_obj_with_featid(featid,featname, dsid, chr, feat_start, feat_stop){
  this.featid=featid;
  this.start=feat_start*1;//-$('#upstream').val()*1;
