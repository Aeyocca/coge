function redefine(rc){
  $('#gc_info').html('');

  var up;
  var down;
  myObj.rc=rc;
  if(! isNaN($('#addup').val())) {
   up = ($('#upstream').val()*1)-($('#addup').val()*1);
   down = ($('#downstream').val())*1+($('#adddown').val()*1);
   $('#upstream').val(up);
   $('#downstream').val(down);
   myObj.start=$('#upstream').val();
   myObj.stop=$('#downstream').val();

  }
  else {
   myObj.start = (myObj.orig_start*1) - ($('#upstream').val()*1);
   myObj.stop  = (myObj.orig_stop *1) + ($('#downstream').val()*1);
  }
  get_sequence(myObj.rc,myObj.pro,1);
  $('#addup').val(0);
  $('#adddown').val(0);
  find_feats(['args__dsid','args__'+myObj.dsid,'args__start','args__'+myObj.start,'args__stop','args__'+myObj.stop,'args__chr','args__'+myObj.chr],['find_feats_button','feat_type_list']);
}

function get_sequence(rc,pro,add){
  //waiting('seq_text',rc);
  if (typeof pro == 'undefined'){
  pro=myObj.pro || 0;}
  else{
  myObj.pro=pro;}
  if (typeof rc == 'undefined'){
  rc = myObj.rc || 0;}
  else{
  myObj.rc=rc;}
  if (rc) {
    $('#rc_button').hide(0);
    $('#dna_button').show(0);
   }	
  var nowrap = myObj.nowrap;
  //alert(rc);
  get_seq(['args__featid', 'args__'+myObj.featid, 'args__pro', 'args__'+pro, 'args__rc', 'args__'+rc, 'args__chr', 'args__'+myObj.chr, 'args__dsid', 'args__'+myObj.dsid, 'args__featname', 'args__'+myObj.featname, 'args__upstream', 'upstream', 'args__downstream', 'downstream', 'args__start', 'args__'+myObj.start,'args__stop', 'args__'+myObj.stop,'args__add', 'args__'+add, 'args__nowrap','args__'+nowrap],['seq_text']);
  //alert($('#seq_text').html());
}

