<SCRIPT language="JavaScript">

function search_chain(val) {
 accnminlen = 4;
 annominlen = 8;
 $('#anno').hide();	
 $('#accn_list').hide();
 $('#Source').hide();
 $('#FeatType').hide();
 var searched = 0;
 if ((val == 1)){
   $('#anno').html('<img src="./picts/animations/DNA_orbit_animated_small_third.gif" >'); 
   $('#anno').show();
   searched=1;	
   go_cogesearch();
    
 } 
 else if ($('#accn').val().length > accnminlen) {
   $('#anno').html('<img src="./picts/animations/DNA_orbit_animated_small_third.gif" >'); 
   $('#anno').show();
   searched=1;	
   go_cogesearch();
 }
 else if ($('#annosearch').val().length > annominlen) {
   $('#anno').html('<img src="./picts/animations/DNA_orbit_animated_small_third.gif" >'); 
   $('#anno').show();
   searched=1;	
   go_cogesearch();
 }

 if (!searched)
  {
    $('anno').html('Search not run.');
  }

}

function go_cogesearch () {
 cogesearch(['args__accn','accn', 'args__anno','annosearch','args__type','type', 'args__org','org', 'args__feat_name_wild','feat_name_wild', 'args__feat_anno_wild', 'feat_anno_wild'],[source_search_chain]);
}

function source_search_chain (val) {
// $('#Source').html('<input type="hidden" id="dsid"><font class="loading">Loading. . .</font>');	
// $('#FeatType').html('<input type="hidden" id="Type_name">');	
// $('#anno').hide();
 if (val) {$('#accn_list').html(val);$('#accn_list').show()}
 source_search(['accn_select'], [get_types_chain]);
}

function get_types_chain (val1, val2) {
// $('#FeatType').html('<input type="hidden" id="Type_name"><font class="loading">Loading. . .</font>');	
// $('#anno').hide();	
 if (val1) {$('#Source').html(val1);$('#Source').show();}
 get_types(['accn_select', 'dsid'],[get_anno_chain]);	
}

function get_anno_chain (val1, val2) {	
//$('#anno').html('<font class="loading">Loading. . .</font>');
 if (val1) {$('#FeatType').html(val1);$('#FeatType').show();};
 as = $('#accn_select').val();
 tn = $('#Type_name').val();
 get_anno(['accn_select', 'Type_name', 'dsid'],[show_anno]);
}

function show_anno (anno)
 {
 $('#anno').hide(); 
 $('#anno').html(anno);
 $('#anno').slideDown(pageObj.speed); 
 }


function timing(){
  if (pageObj.time){
   clearTimeout(pageObj.time);
  }
   pageObj.time = setTimeout("search_chain(0)",500);
}

$(document).ready(function(){
    if ($('#accn').val()) {search_chain(0);}
});

function onEnter(e){
  if (!e){ 
   var e = window.event;}
  if(e.which == 13){
search_chain(1);
 }
}

